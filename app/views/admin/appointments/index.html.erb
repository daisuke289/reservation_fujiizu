<% content_for :title, "#{@filter_title} - 予約管理" %>

<div class="mb-6">
  <h1 class="text-3xl font-bold text-gray-900"><%= @filter_title %></h1>
  <p class="text-gray-600 mt-1">予約の検索・フィルタ・管理</p>
</div>

<!-- フィルタ・検索 -->
<div class="bg-white rounded-lg shadow mb-6">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900">フィルタ・検索</h2>
  </div>
  <div class="p-6">
    <%= form_with url: admin_appointments_path, method: :get, local: true, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4">
        <!-- ステータスフィルタ -->
        <div>
          <%= f.label :filter, "ステータス", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :filter, 
              [
                ['すべて', ''],
                ['本日', 'today'],
                ['翌日', 'tomorrow'],
                ['予約済み', 'booked'],
                ['来店済み', 'visited'],
                ['要フォローアップ', 'needs_followup'],
                ['キャンセル', 'canceled']
              ],
              { selected: @current_filter },
              { class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" } %>
        </div>

        <!-- 支店フィルタ -->
        <div>
          <%= f.label :branch_id, "支店", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :branch_id, 
              options_from_collection_for_select(@branches, :id, :name, @current_branch),
              { prompt: 'すべての支店' },
              { class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" } %>
        </div>

        <!-- 日付From -->
        <div>
          <%= f.label :date_from, "開始日", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :date_from, 
              value: @current_date_from,
              class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" %>
        </div>

        <!-- 日付To -->
        <div>
          <%= f.label :date_to, "終了日", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :date_to, 
              value: @current_date_to,
              class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" %>
        </div>

        <!-- 検索 -->
        <div>
          <%= f.label :search, "名前・電話", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :search, 
              value: @current_search,
              placeholder: "名前または電話番号",
              class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" %>
        </div>
      </div>

      <div class="flex space-x-3">
        <%= f.submit "検索", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
        <%= link_to "クリア", admin_appointments_path, 
            class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-md text-sm font-medium" %>
      </div>
    <% end %>
  </div>
</div>

<!-- クイックフィルタ -->
<div class="flex flex-wrap gap-2 mb-6">
  <%= link_to "すべて", admin_appointments_path, 
      class: "px-3 py-1 rounded-full text-sm font-medium #{@current_filter.blank? ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
  <%= link_to "本日", admin_appointments_path(filter: 'today'), 
      class: "px-3 py-1 rounded-full text-sm font-medium #{@current_filter == 'today' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
  <%= link_to "翌日", admin_appointments_path(filter: 'tomorrow'), 
      class: "px-3 py-1 rounded-full text-sm font-medium #{@current_filter == 'tomorrow' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
  <%= link_to "予約済み", admin_appointments_path(filter: 'booked'), 
      class: "px-3 py-1 rounded-full text-sm font-medium #{@current_filter == 'booked' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
  <%= link_to "来店済み", admin_appointments_path(filter: 'visited'), 
      class: "px-3 py-1 rounded-full text-sm font-medium #{@current_filter == 'visited' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
  <%= link_to "要フォローアップ", admin_appointments_path(filter: 'needs_followup'), 
      class: "px-3 py-1 rounded-full text-sm font-medium #{@current_filter == 'needs_followup' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
</div>

<!-- 予約一覧テーブル -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900">
      予約一覧 (<%= @appointments.total_count %>件)
    </h2>
  </div>
  
  <% if @appointments.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">受付番号</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">予約日時</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">お客様</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">支店</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">相談種別</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ステータス</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @appointments.each do |appointment| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= format('%08d', appointment.id) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <div><%= appointment.slot.starts_at.strftime('%m/%d(%a)') %></div>
                <div class="text-xs text-gray-500"><%= appointment.slot.starts_at.strftime('%H:%M') %>-<%= appointment.slot.ends_at.strftime('%H:%M') %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <div class="font-medium"><%= appointment.name %></div>
                <div class="text-xs text-gray-500"><%= appointment.phone %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= appointment.branch.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= appointment.appointment_type.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 text-xs font-medium rounded-full 
                  <%= case appointment.status
                      when 'booked' then 'bg-yellow-100 text-yellow-800'
                      when 'visited' then 'bg-green-100 text-green-800'
                      when 'needs_followup' then 'bg-blue-100 text-blue-800'
                      when 'canceled' then 'bg-red-100 text-red-800'
                      end %>">
                  <%= case appointment.status
                      when 'booked' then '予約済み'
                      when 'visited' then '来店済み'
                      when 'needs_followup' then '要フォローアップ'
                      when 'canceled' then 'キャンセル'
                      end %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "詳細", admin_appointment_path(appointment), 
                    class: "text-blue-600 hover:text-blue-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <!-- ページネーション -->
    <div class="px-6 py-4 border-t border-gray-200">
      <%= paginate @appointments if respond_to?(:paginate) %>
    </div>
  <% else %>
    <div class="p-6 text-center text-gray-500">
      該当する予約が見つかりませんでした。
    </div>
  <% end %>
</div>
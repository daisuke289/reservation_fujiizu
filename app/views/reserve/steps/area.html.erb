<% content_for :title, "エリア選択 - 富士伊豆農業協同組合 予約システム" %>

<div class="max-w-4xl mx-auto">
  <!-- 進捗表示（Nexus風） -->
  <div class="mb-8 fade-in-up">
    <div class="flex items-center justify-center space-x-2 md:space-x-4 mb-4">
      <!-- Step 1: アクティブ -->
      <div class="flex items-center">
        <div class="w-12 h-12 bg-gradient-to-br from-green-600 to-green-700 text-white rounded-full flex items-center justify-center font-bold text-lg shadow-md scale-110 transition-all duration-300">
          1
        </div>
        <span class="ml-2 text-lg font-semibold" style="color: var(--primary-color);">エリア選択</span>
      </div>

      <div class="w-8 md:w-12 h-1 bg-gray-300"></div>

      <!-- Step 2: 未完了 -->
      <div class="flex items-center">
        <div class="w-12 h-12 bg-white text-gray-400 border border-gray-300 rounded-full flex items-center justify-center font-bold text-lg transition-all duration-300">
          2
        </div>
        <span class="ml-2 text-lg text-gray-400 hidden md:inline">支店選択</span>
      </div>

      <div class="w-8 md:w-12 h-1 bg-gray-300"></div>

      <!-- Step 3: 未完了 -->
      <div class="flex items-center">
        <div class="w-12 h-12 bg-white text-gray-400 border border-gray-300 rounded-full flex items-center justify-center font-bold text-lg transition-all duration-300">
          3
        </div>
        <span class="ml-2 text-lg text-gray-400 hidden md:inline">日時選択</span>
      </div>

      <div class="w-8 md:w-12 h-1 bg-gray-300"></div>

      <!-- Step 4: 未完了 -->
      <div class="flex items-center">
        <div class="w-12 h-12 bg-white text-gray-400 border border-gray-300 rounded-full flex items-center justify-center font-bold text-lg transition-all duration-300">
          4
        </div>
        <span class="ml-2 text-lg text-gray-400 hidden md:inline">お客様情報</span>
      </div>
    </div>
  </div>

  <!-- メインコンテンツ（グラスカード） -->
  <div class="glass-card rounded-2xl p-8 md:p-12 mb-12 scroll-reveal">
    <div class="text-center mb-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-3" style="color: var(--primary-color);">エリアを選択してください</h1>
      <p class="text-xl" style="color: var(--text-light);">ご希望の相談エリアをお選びください</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <% @areas.each_with_index do |area, index| %>
        <div class="group scroll-reveal" style="transition-delay: <%= index * 0.05 %>s;">
          <%= button_to reserve_steps_next_path(current_step: 'area', area_id: area.id),
              method: :post,
              class: "w-full glass-card rounded-lg p-6 text-center transition-all duration-400 hover:border-green-500 hover:shadow-2xl hover:-translate-y-3 cursor-pointer border border-transparent" do %>
            <!-- グラデーション背景アイコン -->
            <div class="w-20 h-20 bg-gradient-to-br from-green-100 to-green-200 rounded-full flex items-center justify-center mx-auto mb-4 transition-all group-hover:scale-110">
              <i class="fas fa-map-marker-alt text-3xl" style="color: var(--primary-color);"></i>
            </div>

            <h3 class="text-2xl font-bold mb-2" style="color: var(--text-color);"><%= area.name %></h3>
            <p class="text-base mb-4" style="color: var(--text-light);">
              支店数: <%= area.branches.count %>店舗
              <% if area.jurisdiction.present? %>
                <br>
                <span class="text-sm">管轄: <%= area.jurisdiction %></span>
              <% end %>
            </p>

            <span class="inline-flex items-center px-4 py-2 rounded-full text-base font-medium bg-green-100 transition-colors hover:bg-green-200" style="color: var(--primary-color);">
              選択する
              <i class="fas fa-arrow-right ml-2"></i>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if @areas.empty? %>
      <div class="text-center py-12">
        <i class="fas fa-exclamation-triangle text-5xl mb-4" style="color: var(--accent-light);"></i>
        <p class="text-xl mb-6" style="color: var(--text-light);">
          現在、ご利用可能なエリアがありません。
        </p>
        <%= render 'shared/btn',
            text: 'ホームに戻る',
            variant: 'secondary',
            size: 'lg',
            url: root_path %>
      </div>
    <% end %>
  </div>

  <!-- 戻るボタン -->
  <div class="mt-8 text-center scroll-reveal">
    <%= render 'shared/btn',
        text: 'ホームに戻る',
        variant: 'outline-secondary',
        size: 'lg',
        url: root_path,
        icon: 'fas fa-arrow-left' %>
  </div>
</div>

<!-- Font Awesome CDN -->
<% content_for :head do %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<% end %>

<% content_for :title, "支店選択 - 富士伊豆農業協同組合 予約システム" %>

<div class="max-w-6xl mx-auto">
  <!-- 進捗表示 -->
  <div class="mb-8">
    <div class="flex items-center justify-center space-x-4 mb-4">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-green-600 text-white rounded-full flex items-center justify-center font-bold text-lg">✓</div>
        <span class="ml-2 text-lg text-green-600">エリア選択</span>
      </div>
      <div class="w-8 h-1 bg-green-600"></div>
      <div class="flex items-center">
        <div class="w-10 h-10 bg-green-600 text-white rounded-full flex items-center justify-center font-bold text-lg">2</div>
        <span class="ml-2 text-lg font-semibold text-green-600">支店選択</span>
      </div>
      <div class="w-8 h-1 bg-gray-300"></div>
      <div class="flex items-center">
        <div class="w-10 h-10 bg-gray-300 text-gray-500 rounded-full flex items-center justify-center font-bold text-lg">3</div>
        <span class="ml-2 text-lg text-gray-500">日時選択</span>
      </div>
      <div class="w-8 h-1 bg-gray-300"></div>
      <div class="flex items-center">
        <div class="w-10 h-10 bg-gray-300 text-gray-500 rounded-full flex items-center justify-center font-bold text-lg">4</div>
        <span class="ml-2 text-lg text-gray-500">お客様情報</span>
      </div>
    </div>
  </div>

  <!-- 選択されたエリア表示 -->
  <div class="mb-6">
    <div class="bg-green-50 border border-green-200 rounded-lg p-4">
      <div class="flex items-center">
        <i class="fas fa-map-marker-alt text-green-600 mr-3"></i>
        <span class="text-lg font-semibold text-green-800">選択中のエリア: </span>
        <span class="text-lg text-green-700 ml-2"><%= @area.name %></span>
      </div>
    </div>
  </div>

  <!-- メインコンテンツ -->
  <%= render 'shared/card',
      title: '支店を選択してください',
      subtitle: 'ご希望の支店をお選びください',
      padding: 'lg',
      shadow: 'lg' do %>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <% @branches.each do |branch| %>
        <%= render 'shared/card',
            title: branch.name,
            padding: 'lg',
            shadow: 'md',
            border: true do %>
          
          <div class="space-y-4">
            <!-- 住所 -->
            <div class="flex items-start">
              <i class="fas fa-map-marker-alt text-green-600 mt-1 mr-3 flex-shrink-0"></i>
              <div>
                <p class="text-sm font-semibold text-gray-700 mb-1">住所</p>
                <p class="text-lg text-gray-800"><%= branch.address %></p>
              </div>
            </div>
            
            <!-- 電話番号 -->
            <div class="flex items-start">
              <i class="fas fa-phone text-green-600 mt-1 mr-3 flex-shrink-0"></i>
              <div>
                <p class="text-sm font-semibold text-gray-700 mb-1">電話番号</p>
                <p class="text-lg text-gray-800">
                  <%= branch.phone.gsub(/(\d{4})(\d{2})(\d{4})/, '\1-\2-\3') if branch.phone.length == 10 %>
                  <%= branch.phone.gsub(/(\d{3})(\d{4})(\d{4})/, '\1-\2-\3') if branch.phone.length == 11 %>
                </p>
              </div>
            </div>
            
            <!-- 営業時間 -->
            <div class="flex items-start">
              <i class="fas fa-clock text-green-600 mt-1 mr-3 flex-shrink-0"></i>
              <div>
                <p class="text-sm font-semibold text-gray-700 mb-1">営業時間</p>
                <p class="text-lg text-gray-800 whitespace-pre-line"><%= branch.open_hours %></p>
              </div>
            </div>
            
            <!-- 予約ボタン -->
            <div class="pt-4 border-t border-gray-200">
              <%= link_to reserve_steps_next_path(current_step: 'branch', branch_id: branch.id),
                  data: { turbo_method: :post },
                  class: "w-full inline-flex items-center justify-center px-6 py-3 border border-transparent text-lg font-semibold rounded-lg text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-4 focus:ring-green-300 transition duration-200" do %>
                <i class="fas fa-calendar-check mr-2"></i>
                この支店で予約する
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    
    <% if @branches.empty? %>
      <div class="text-center py-12">
        <i class="fas fa-exclamation-triangle text-4xl text-yellow-500 mb-4"></i>
        <p class="text-xl text-gray-600 mb-6">
          このエリアには現在利用可能な支店がありません。
        </p>
        <%= render 'shared/btn',
            text: 'エリア選択に戻る',
            variant: 'secondary',
            size: 'lg',
            url: reserve_steps_area_path %>
      </div>
    <% end %>
  <% end %>

  <!-- ナビゲーションボタン -->
  <div class="mt-8 flex justify-between">
    <%= render 'shared/btn',
        text: 'エリア選択に戻る',
        variant: 'outline-secondary',
        size: 'lg',
        url: reserve_steps_area_path,
        icon: 'fas fa-arrow-left' %>
    
    <%= render 'shared/btn',
        text: 'ホームに戻る',
        variant: 'secondary',
        size: 'lg',
        url: root_path %>
  </div>
</div>

<!-- Font Awesome CDN -->
<% content_for :head do %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<% end %>
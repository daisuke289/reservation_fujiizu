<% content_for :title, "富士伊豆農業協同組合 相続相談予約システム" %>

<!-- Hero Section -->
<section class="relative -mt-8 mb-20">
  <!-- Animated Background Shapes -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-32 h-32 bg-gradient-to-br from-primary-200 to-primary-300 rounded-full blur-2xl opacity-40 animate-float"></div>
    <div class="absolute bottom-20 right-20 w-40 h-40 bg-gradient-to-br from-primary-300 to-primary-400 rounded-full blur-2xl opacity-30 animate-float" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 left-1/2 w-24 h-24 bg-gradient-to-br from-primary-100 to-primary-200 rounded-full blur-2xl opacity-50 animate-float" style="animation-delay: 4s;"></div>
  </div>

  <div class="relative glass-ultra rounded-3xl p-8 md:p-16 shadow-2xl shadow-primary-500/10 overflow-hidden">
    <!-- Grid Pattern Overlay -->
    <div class="absolute inset-0 opacity-5">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid" width="32" height="32" patternUnits="userSpaceOnUse">
            <path d="M0 32V0h32" fill="none" stroke="currentColor" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)"/>
      </svg>
    </div>

    <div class="relative flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
      <!-- Text Content -->
      <div class="flex-1 text-center lg:text-left">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary-50 rounded-full border border-primary-200 mb-6 animate-slide-up stagger-1">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-primary-500"></span>
          </span>
          <span class="text-primary-700 font-semibold text-sm tracking-wide">相続相談サービス</span>
        </div>

        <!-- Main Heading -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6 animate-slide-up stagger-2">
          相続のお悩みを<br>
          <span class="relative">
            <span class="bg-gradient-to-r from-primary-500 via-primary-600 to-primary-700 bg-clip-text text-transparent">
              専門家が解決
            </span>
            <svg class="absolute -bottom-2 left-0 w-full" viewBox="0 0 300 12" fill="none">
              <path d="M2 10C50 4 150 2 298 8" stroke="url(#underline-gradient)" stroke-width="4" stroke-linecap="round"/>
              <defs>
                <linearGradient id="underline-gradient" x1="0" y1="0" x2="300" y2="0">
                  <stop offset="0%" stop-color="#10b981"/>
                  <stop offset="100%" stop-color="#047857"/>
                </linearGradient>
              </defs>
            </svg>
          </span>
        </h1>

        <!-- Description -->
        <p class="text-lg md:text-xl text-gray-600 leading-relaxed mb-8 max-w-xl mx-auto lg:mx-0 animate-slide-up stagger-3">
          富士伊豆農業協同組合の相続専門スタッフが、
          あなたの大切な財産の継承をサポートいたします。
          まずはお気軽にご相談ください。
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center gap-4 justify-center lg:justify-start animate-slide-up stagger-4">
          <%= link_to reserve_steps_path, class: "group relative inline-flex items-center gap-3 px-8 py-4 btn-gradient text-white font-bold text-lg rounded-2xl shadow-xl shadow-primary-500/30 hover:shadow-primary-500/50 transition-all duration-300 hover:scale-105 overflow-hidden" do %>
            <span class="relative z-10">今すぐ予約する</span>
            <i class="fas fa-arrow-right relative z-10 group-hover:translate-x-1 transition-transform"></i>
            <div class="absolute inset-0 shimmer rounded-2xl"></div>
          <% end %>

          <a href="#services" class="inline-flex items-center gap-2 px-6 py-4 text-gray-700 font-semibold hover:text-primary-600 transition-colors">
            <span>サービスを見る</span>
            <i class="fas fa-chevron-down animate-bounce"></i>
          </a>
        </div>

        <!-- Trust Badges -->
        <div class="flex items-center gap-6 mt-10 justify-center lg:justify-start animate-slide-up stagger-5">
          <div class="flex items-center gap-2 text-gray-500">
            <i class="fas fa-shield-alt text-primary-500"></i>
            <span class="text-sm font-medium">安心・安全</span>
          </div>
          <div class="flex items-center gap-2 text-gray-500">
            <i class="fas fa-user-tie text-primary-500"></i>
            <span class="text-sm font-medium">専門スタッフ対応</span>
          </div>
          <div class="flex items-center gap-2 text-gray-500">
            <i class="fas fa-clock text-primary-500"></i>
            <span class="text-sm font-medium">約60分の相談</span>
          </div>
        </div>
      </div>

      <!-- Hero Visual -->
      <div class="flex-shrink-0 relative animate-scale-in stagger-3">
        <div class="relative w-72 h-72 md:w-80 md:h-80 lg:w-96 lg:h-96">
          <!-- Outer Ring -->
          <div class="absolute inset-0 bg-gradient-to-br from-primary-100 to-primary-200 rounded-full animate-pulse-slow"></div>

          <!-- Middle Ring -->
          <div class="absolute inset-4 bg-gradient-to-br from-primary-200 to-primary-300 rounded-full shadow-2xl"></div>

          <!-- Inner Content -->
          <div class="absolute inset-8 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full shadow-2xl flex items-center justify-center overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent"></div>
            <div class="relative text-center text-white">
              <i class="fas fa-handshake text-5xl md:text-6xl mb-3 drop-shadow-lg"></i>
              <div class="text-lg font-bold">相続相談</div>
              <div class="text-sm opacity-80">来店予約</div>
            </div>
          </div>

          <!-- Floating Elements -->
          <div class="absolute -top-4 -right-4 w-16 h-16 bg-white rounded-2xl shadow-xl flex items-center justify-center animate-float">
            <i class="fas fa-calendar-check text-primary-500 text-2xl"></i>
          </div>
          <div class="absolute -bottom-4 -left-4 w-14 h-14 bg-white rounded-2xl shadow-xl flex items-center justify-center animate-float" style="animation-delay: 1s;">
            <i class="fas fa-file-alt text-primary-500 text-xl"></i>
          </div>
          <div class="absolute top-1/2 -right-8 w-12 h-12 bg-white rounded-xl shadow-xl flex items-center justify-center animate-float" style="animation-delay: 2s;">
            <i class="fas fa-check text-primary-500 text-lg"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Scroll Indicator -->
<div class="text-center mb-16 animate-fade-in stagger-5">
  <div class="inline-flex flex-col items-center gap-2 text-primary-500">
    <span class="text-xs font-semibold tracking-widest uppercase">Scroll</span>
    <div class="w-6 h-10 border-2 border-primary-300 rounded-full flex justify-center pt-2">
      <div class="w-1.5 h-3 bg-primary-500 rounded-full animate-bounce"></div>
    </div>
  </div>
</div>

<!-- Services Section (Bento Grid) -->
<section id="services" class="mb-20">
  <div class="text-center mb-12">
    <span class="inline-block px-4 py-2 bg-primary-50 text-primary-600 font-semibold text-sm rounded-full mb-4">サービス</span>
    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">相続に関する総合サポート</h2>
    <p class="text-gray-600 text-lg max-w-2xl mx-auto">専門知識を持つスタッフが、お客様一人ひとりに寄り添った丁寧なサービスを提供いたします。</p>
  </div>

  <!-- Bento Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Card 1: Featured (Larger) -->
    <div class="lg:col-span-2 group">
      <div class="h-full glass-ultra rounded-3xl p-8 card-3d hover:border-primary-200 transition-all duration-500">
        <div class="flex flex-col md:flex-row items-start gap-6">
          <div class="w-20 h-20 bg-gradient-to-br from-primary-100 to-primary-200 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
            <i class="fas fa-file-signature text-primary-600 text-3xl"></i>
          </div>
          <div class="flex-1">
            <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">相続手続き相談</h3>
            <p class="text-gray-600 leading-relaxed mb-4">
              相続発生後の各種手続きについて、専門知識を持つスタッフが分かりやすくご説明。
              必要書類の準備から名義変更まで、トータルでサポートいたします。
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-primary-50 text-primary-600 text-sm font-medium rounded-full">名義変更</span>
              <span class="px-3 py-1 bg-primary-50 text-primary-600 text-sm font-medium rounded-full">必要書類</span>
              <span class="px-3 py-1 bg-primary-50 text-primary-600 text-sm font-medium rounded-full">手続き代行</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Card 2 -->
    <div class="group">
      <div class="h-full glass-ultra rounded-3xl p-8 card-3d hover:border-primary-200 transition-all duration-500">
        <div class="w-16 h-16 bg-gradient-to-br from-blue-100 to-blue-200 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
          <i class="fas fa-pen-fancy text-blue-600 text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">遺言書作成支援</h3>
        <p class="text-gray-600 leading-relaxed">
          遺言書の作成方法や注意点について詳しくご説明。
          将来のトラブルを防ぐための適切なアドバイスを提供します。
        </p>
      </div>
    </div>

    <!-- Card 3 -->
    <div class="group">
      <div class="h-full glass-ultra rounded-3xl p-8 card-3d hover:border-primary-200 transition-all duration-500">
        <div class="w-16 h-16 bg-gradient-to-br from-amber-100 to-amber-200 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
          <i class="fas fa-chart-line text-amber-600 text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">資産活用相談</h3>
        <p class="text-gray-600 leading-relaxed">
          相続財産の有効活用や税務対策について、
          お客様のニーズに合わせたアドバイスをいたします。
        </p>
      </div>
    </div>

    <!-- Card 4 -->
    <div class="group">
      <div class="h-full glass-ultra rounded-3xl p-8 card-3d hover:border-primary-200 transition-all duration-500">
        <div class="w-16 h-16 bg-gradient-to-br from-purple-100 to-purple-200 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
          <i class="fas fa-users text-purple-600 text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">家族信託相談</h3>
        <p class="text-gray-600 leading-relaxed">
          認知症対策や円滑な資産承継のための
          家族信託についてご相談いただけます。
        </p>
      </div>
    </div>

    <!-- Card 5 -->
    <div class="group">
      <div class="h-full glass-ultra rounded-3xl p-8 card-3d hover:border-primary-200 transition-all duration-500">
        <div class="w-16 h-16 bg-gradient-to-br from-rose-100 to-rose-200 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
          <i class="fas fa-balance-scale text-rose-600 text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">専門家紹介</h3>
        <p class="text-gray-600 leading-relaxed">
          税理士・司法書士など、相続に関する
          各分野の専門家をご紹介いたします。
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Process Section -->
<section class="mb-20">
  <div class="glass-ultra rounded-3xl p-8 md:p-12 shadow-xl">
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-2 bg-primary-50 text-primary-600 font-semibold text-sm rounded-full mb-4">予約の流れ</span>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">簡単3ステップで予約完了</h2>
      <p class="text-gray-600 text-lg">オンラインで24時間いつでもご予約いただけます</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 relative">
      <!-- Connecting Line (Desktop) -->
      <div class="hidden md:block absolute top-16 left-1/6 right-1/6 h-0.5 bg-gradient-to-r from-primary-200 via-primary-400 to-primary-200"></div>

      <!-- Step 1 -->
      <div class="relative text-center group">
        <div class="relative z-10 w-32 h-32 mx-auto mb-6">
          <div class="absolute inset-0 bg-gradient-to-br from-primary-100 to-primary-200 rounded-full group-hover:scale-110 transition-transform duration-500"></div>
          <div class="absolute inset-2 bg-white rounded-full shadow-lg flex items-center justify-center">
            <div class="text-center">
              <span class="text-4xl font-bold bg-gradient-to-br from-primary-500 to-primary-700 bg-clip-text text-transparent">1</span>
            </div>
          </div>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">エリア・支店選択</h3>
        <p class="text-gray-600">ご希望のエリアと<br>支店をお選びください</p>
      </div>

      <!-- Step 2 -->
      <div class="relative text-center group">
        <div class="relative z-10 w-32 h-32 mx-auto mb-6">
          <div class="absolute inset-0 bg-gradient-to-br from-primary-200 to-primary-300 rounded-full group-hover:scale-110 transition-transform duration-500"></div>
          <div class="absolute inset-2 bg-white rounded-full shadow-lg flex items-center justify-center">
            <div class="text-center">
              <span class="text-4xl font-bold bg-gradient-to-br from-primary-500 to-primary-700 bg-clip-text text-transparent">2</span>
            </div>
          </div>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">日時選択</h3>
        <p class="text-gray-600">ご都合の良い<br>日時をお選びください</p>
      </div>

      <!-- Step 3 -->
      <div class="relative text-center group">
        <div class="relative z-10 w-32 h-32 mx-auto mb-6">
          <div class="absolute inset-0 bg-gradient-to-br from-primary-300 to-primary-400 rounded-full group-hover:scale-110 transition-transform duration-500"></div>
          <div class="absolute inset-2 bg-white rounded-full shadow-lg flex items-center justify-center">
            <div class="text-center">
              <span class="text-4xl font-bold bg-gradient-to-br from-primary-500 to-primary-700 bg-clip-text text-transparent">3</span>
            </div>
          </div>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">お客様情報入力</h3>
        <p class="text-gray-600">必要事項をご入力いただき<br>予約完了です</p>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <%= link_to reserve_steps_path, class: "group relative inline-flex items-center gap-3 px-10 py-5 btn-gradient text-white font-bold text-xl rounded-2xl shadow-xl shadow-primary-500/30 hover:shadow-primary-500/50 transition-all duration-300 hover:scale-105 overflow-hidden" do %>
        <span class="relative z-10">予約を開始する</span>
        <i class="fas fa-arrow-right relative z-10 group-hover:translate-x-1 transition-transform"></i>
        <div class="absolute inset-0 shimmer rounded-2xl"></div>
      <% end %>
    </div>
  </div>
</section>

<!-- Info Section -->
<section class="mb-20">
  <div class="glass-ultra rounded-3xl p-8 md:p-12 border-l-4 border-primary-500 shadow-xl">
    <div class="flex items-start gap-4 mb-8">
      <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center flex-shrink-0">
        <i class="fas fa-info-circle text-primary-600 text-xl"></i>
      </div>
      <div>
        <h2 class="text-2xl font-bold text-gray-900">ご予約に関するご注意</h2>
        <p class="text-gray-600 mt-1">ご来店前にご確認ください</p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="flex items-start gap-4 p-4 bg-white/50 rounded-xl hover:bg-white/80 transition-colors">
        <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <i class="fas fa-calendar-alt text-primary-600"></i>
        </div>
        <div>
          <h4 class="font-semibold text-gray-900">予約締切</h4>
          <p class="text-gray-600">来店日の<strong class="text-primary-600">3営業日前まで</strong>にお申し込みください</p>
        </div>
      </div>

      <div class="flex items-start gap-4 p-4 bg-white/50 rounded-xl hover:bg-white/80 transition-colors">
        <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <i class="fas fa-clock text-primary-600"></i>
        </div>
        <div>
          <h4 class="font-semibold text-gray-900">相談時間</h4>
          <p class="text-gray-600">相談時間は<strong class="text-primary-600">約60分</strong>を予定しております</p>
        </div>
      </div>

      <div class="flex items-start gap-4 p-4 bg-white/50 rounded-xl hover:bg-white/80 transition-colors">
        <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <i class="fas fa-folder-open text-primary-600"></i>
        </div>
        <div>
          <h4 class="font-semibold text-gray-900">ご持参物</h4>
          <p class="text-gray-600">相談内容に関する<strong class="text-primary-600">資料</strong>をお持ちいただくと、より具体的なアドバイスが可能です</p>
        </div>
      </div>

      <div class="flex items-start gap-4 p-4 bg-white/50 rounded-xl hover:bg-white/80 transition-colors">
        <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <i class="fas fa-phone text-primary-600"></i>
        </div>
        <div>
          <h4 class="font-semibold text-gray-900">お問い合わせ</h4>
          <p class="text-gray-600">ご不明な点は各支店まで<strong class="text-primary-600">お電話</strong>でお問い合わせください</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Stats Section -->
<section class="mb-20">
  <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
    <div class="glass-ultra rounded-2xl p-6 text-center card-3d">
      <div class="text-4xl font-bold bg-gradient-to-r from-primary-500 to-primary-700 bg-clip-text text-transparent mb-2">105</div>
      <div class="text-gray-600 font-medium">支店数</div>
    </div>
    <div class="glass-ultra rounded-2xl p-6 text-center card-3d">
      <div class="text-4xl font-bold bg-gradient-to-r from-primary-500 to-primary-700 bg-clip-text text-transparent mb-2">8</div>
      <div class="text-gray-600 font-medium">エリア</div>
    </div>
    <div class="glass-ultra rounded-2xl p-6 text-center card-3d">
      <div class="text-4xl font-bold bg-gradient-to-r from-primary-500 to-primary-700 bg-clip-text text-transparent mb-2">60</div>
      <div class="text-gray-600 font-medium">分の相談</div>
    </div>
    <div class="glass-ultra rounded-2xl p-6 text-center card-3d">
      <div class="text-4xl font-bold bg-gradient-to-r from-primary-500 to-primary-700 bg-clip-text text-transparent mb-2">24h</div>
      <div class="text-gray-600 font-medium">オンライン予約</div>
    </div>
  </div>
</section>

<!-- Final CTA -->
<section>
  <div class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-primary-500 via-primary-600 to-primary-700 p-8 md:p-12 text-center shadow-2xl">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="final-grid" width="40" height="40" patternUnits="userSpaceOnUse">
            <circle cx="20" cy="20" r="1" fill="white"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#final-grid)"/>
      </svg>
    </div>

    <!-- Decorative Shapes -->
    <div class="absolute -top-20 -left-20 w-60 h-60 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-20 -right-20 w-60 h-60 bg-white/10 rounded-full blur-3xl"></div>

    <div class="relative">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        相続のお悩み、一緒に解決しましょう
      </h2>
      <p class="text-white/90 text-lg mb-8 max-w-2xl mx-auto">
        専門スタッフが丁寧にサポートいたします。まずはお気軽にご予約ください。
      </p>
      <%= link_to reserve_steps_path, class: "inline-flex items-center gap-3 px-10 py-5 bg-white text-primary-600 font-bold text-xl rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105" do %>
        <i class="fas fa-calendar-check"></i>
        <span>今すぐ予約する</span>
        <i class="fas fa-arrow-right"></i>
      <% end %>
    </div>
  </div>
</section>

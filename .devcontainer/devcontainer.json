{
  "name": "Reservation Fujiizu Development",
  "image": "mcr.microsoft.com/devcontainers/ruby:1-3.2-bullseye",

  // Features to add to the dev container
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    }
  },

  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "extensions": [
        // Ruby extensions
        "Shopify.ruby-lsp",
        "kaiwood.endwise",

        // Rails extensions
        "aki77.rails-db-schema",
        "bung87.rails",
        "hridoy.rails-snippets",

        // Database
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",

        // Git
        "eamodio.gitlens",

        // Testing
        "connorshea.vscode-ruby-test-adapter",

        // General productivity
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint"
      ],

      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.associations": {
          "*.html.erb": "erb"
        },
        "emmet.includeLanguages": {
          "erb": "html"
        },
        "ruby.lsp.enableExperimentalFeatures": true,
        "ruby.useBundler": true,
        "ruby.format": "rubocop",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true
      }
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally
  "forwardPorts": [3000, 5432],

  // Port attributes
  "portsAttributes": {
    "3000": {
      "label": "Rails Server",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },

  // Use 'postCreateCommand' to run commands after the container is created
  "postCreateCommand": "bash .devcontainer/setup.sh",

  // Use 'postStartCommand' to run commands after the container starts
  "postStartCommand": "docker-compose up -d postgres",

  // Connect as vscode user
  "remoteUser": "vscode",

  // Mount docker socket for docker-compose
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  // Environment variables
  "remoteEnv": {
    "DATABASE_HOST": "postgres",
    "DATABASE_USERNAME": "postgres",
    "DATABASE_PASSWORD": "postgres",
    "RAILS_ENV": "development"
  }
}
